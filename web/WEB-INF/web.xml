        <servlet-name>statisticServlet</servlet-name>
        <url-pattern>/statistic</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>listOrdersServlet</servlet-name>
        <servlet-class>admin.listOrdersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>listOrdersServlet</servlet-name>
        <url-pattern>/listOrders</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteBookServlet</servlet-name>
        <servlet-class>admin.deleteBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteBookServlet</servlet-name>
        <url-pattern>/deleteBook</url-pattern>
    </servlet-mapping>
</web-app>